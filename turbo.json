{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "node_modules/.cache/metro/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "clean": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["**/*.{ts,tsx,js,jsx}"],
      "env": ["TZ"]

    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
