{
  "name": "@marceloterreiro/monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "kitchen-sink/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean && rm -rf node_modules",
    "dev": "turbo dev",
    "kitchen-sink:expo": "cd kitchen-sink/expo-app && bun run ios",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "bun test"
  },
  "devDependencies": {
    "@marceloterreiro/eslint-config": "*",
    "@marceloterreiro/tsconfig": "*",
    "@typescript-eslint/typescript-estree": "^6.21.0",
    "prettier": "^2.8.8",
    "turbo": "^1.12.1",
    "typescript": "^5.3.0"
  },
  "packageManager": "bun@1.0.25"
}
